<html>
  <head>
    <title>Backupmasta â€” da masta of ur backups!</title>
  </head>
  <body>
    <h1>Backup Masta</h1>

    <%= Sinatra::Base.environment %>

    <form action="/backups" method="post" accept-charset="utf-8">
      <p>SSH User: <input type="text" name="backup[ssh_user]" value="" id="backup[ssh_user]" /></p>
      <p>Host: <input type="text" name="backup[host]" value="" id="backup[host]" /></p>
      <p>Database User: <input type="text" name="backup[db_user]" value="" id="backup[db_user]" /></p>
      <p>Database Name: <input type="text" name="backup[db_name]" value="" id="backup[db_name]" /></p>
      <p>Database Password: <input type="text" name="backup[db_password]" value="" id="backup[db_password]" /></p>
      <p><input type="submit" value="Add" /></p>
    </form>

    <% Backup.all.each do |backup| %>
      <ul>
        <li>
          <h2><%= backup.ssh_user %>@<%= backup.host %> with database <%= backup.db_name %>@<%= backup.host %></h2>
          <a href="/backups/<%= backup.id %>/perform">Back me up!</a>
        </li>
      </ul>
    <% end %>
  </body>
</html>